@using GoldenHeart.Models

@if (Model.Count > 0)
{
    foreach (var Question in Model)
    {
            <div class="issues-item">
                <div class="issues-item-quest">
                    <div class="issues-item-quest-img"><img src="~/img/quest.png" /></div>
                    <div class="issues-item-quest-txt">
                        <h3>Вопрос</h3>
                        <span>@Question.Name @Question.DateCreate.ToString("[ dd.MM.yyyy | HH:mm ]")</span>
                        <p>@Question.Text</p>
                    </div>
                </div>
                <div class="issues-item-answer">
                    <div class="issues-item-quest-img">
                        <img src="~/img/answer.png" />
                    </div>
                    <div class="issues-item-quest-txt">
                        <h3>Ответ</h3>
                        <span>@Question.Reply.NameDoc @Question.Reply.DateCreate.ToString("[ dd.MM.yyyy | HH:mm ]")</span>
                        <p>@Question.Reply.Text</p>
                    </div>
                </div>
        
            </div>
    }
    if (ViewBag.allQuestionsCount > ViewBag.viewQuestionsCount)
    {
        <div class="issues-next"><button>Показать дальше</button></div>
    }
}
else
{
    <h4>Ваш запрос не дал результатов</h4>
}