@model ICollection<GoldenHeart.Models.User>

@if (Model != null)
{
    foreach (var doc in Model)
    {
        <a href="/Home/Doctor/@doc.Id">
            <div class="hospital-item">
                <img src="~/img/avatars/@doc.Avatar" width="133" height="216" />
                <div class="hospital-item-txt"><p>@doc.FirstName @doc.Name @doc.LastName</p><p>@doc.Position</p></div>
            </div>
        </a>
    }
}
else
{
    <h4>Врачей удовлетворяющих поиску не найденно</h4>
}